{
    "manifest_version": 2,
    "name": "Blartification",
    "description": "This extension replaces (most) instances of 'cop' with 'blart' on reddit.",
    "version": "0.0.01",
    
    "minimum_chrome_version": "47",
    
    "background": {
        "scripts": [ "background.js" ],
        "persistent": false
    },
    
    "content_scripts": [
        {
            "matches": [ "*://www.reddit.com/*" ],
            "js": [ "blartification.js" ]
        }
    ],
    
    "permissions": [ "tabs", "*://www.reddit.com/*" ]
}